{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  // Allow importing JSON files directly in TypeScript.
  "resolveJsonModule": true,
  // Enable synthetic default imports which helps when importing CommonJS modules.
  "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}